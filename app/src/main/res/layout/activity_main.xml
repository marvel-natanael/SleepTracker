<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mplusbold"
        android:text="@string/no_alarm_has_been_set"
        android:textColor="@color/pink"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garis_jam"
            android:contentDescription="@string/garis_jam" />

        <DigitalClock
            android:id="@+id/currentTime"
            android:layout_width="253dp"
            android:layout_height="64dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:fontFamily="@font/quictsand"
            android:letterSpacing="0.1"
            android:text="@string/jam"
            android:textColor="@color/pink"
            android:textSize="40sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mplusbold"
        android:text="@string/you_have_slept"
        android:textSize="15sp"
        android:textColor="@color/pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frm"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/clockTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Turn_off_screen"
        android:textColor="@color/pink"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

<!--    ini tampilan tombol sebelum diklik-->

    <ImageButton
        android:id="@+id/alarmButton"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:background="@drawable/alarm_button"
        android:src="@drawable/btn_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clockTextView"
        app:layout_constraintBottom_toTopOf="@id/textView3"
        android:contentDescription="@string/tombol_sleep" />

<!--    ini tampilan setelah di klik-->

    <Chronometer
        android:id="@+id/c_meter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/quictsand"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/alarmButton"
        app:layout_constraintEnd_toEndOf="@+id/alarmButton"
        app:layout_constraintStart_toStartOf="@+id/alarmButton"
        app:layout_constraintTop_toTopOf="@+id/alarmButton"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/your_optimal_sleep_time_is_8_hours"
        android:layout_marginBottom="30dp"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>